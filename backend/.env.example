# Application Settings
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=1

# Server Configuration
HOST=0.0.0.0
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/bizfindr
MONGO_DB_NAME=bizfindr

# API Configuration
API_BASE_URL=https://data.ct.gov/resource/n7gp-d28j.json
API_PAGE_SIZE=1000

# Authentication
API_KEY=change_this_to_a_secure_random_string

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Data Fetching
LAST_FETCHED_DATE=
FETCH_INTERVAL_HOURS=24

# CORS (Cross-Origin Resource Sharing)
CORS_ORIGINS=*

# Rate Limiting
RATELIMIT_DEFAULT=200/hour
RATELIMIT_STORAGE_URL=memory://

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Session
SECRET_KEY=change_this_to_a_secure_secret_key
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Email Configuration (for notifications)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# Error Reporting
SENTRY_DSN=

# Feature Flags
FEATURE_API_DOCS=True
FEATURE_REGISTRATION=True

# Development Settings
DEBUG_TB_ENABLED=True
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Testing
TESTING=False
TEST_DATABASE_URI=mongodb://test-mongo:27017/test_bizfindr
